{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@teacher-ai/core/*": ["packages/core/src/*"],
      "@teacher-ai/ai/*": ["packages/ai/src/*"],
      "@teacher-ai/mocks/*": ["packages/mocks/src/*"],
      "@teacher-ai/ui/*": ["packages/ui/src/*"]
    }
  }
}