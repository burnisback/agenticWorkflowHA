{
  "name": "teacher-ai-monorepo",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@8.6.7",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "pnpm --filter @teacher-ai/web dev",
    "build": "pnpm --filter @teacher-ai/web build",
    "preview": "pnpm --filter @teacher-ai/web preview",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc -p tsconfig.base.json --noEmit",
    "test": "vitest run",
    "e2e": "playwright test --reporter=list"
  },
  "devDependencies": {
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "playwright": "^1.37.0",
    "@types/node": "^20.8.0"
  }
}